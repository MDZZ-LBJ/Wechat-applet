page{
  padding-bottom: 90rpx
}

/* 收货地址 */
 .revice_address_row .address_bnt{
  padding: 20rpx;
}
.address_bnt button{
  width: 60%
}
.user_info_row{
  padding: 20rpx;
  display: flex
}
.user_info_row .user_info{
   flex: 5
}
.user_info_row .user_phone{
  flex: 3;
  text-align: right
}

/* 购物车列表 */
.cart_content .cart_title{
    padding: 20rpx;
    font-size: 36rpx;
    color: var(--themeColor);
    border-top: 1rpx solid currentColor;
    border-bottom: 1rpx solid currentColor;
}
.cart_content .cart_main{

}
.cart_main .cart_item{
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #000
}
.cart_item .cart_chk_wrap{
   flex: 1;
   display: flex;
   justify-content: center;
   align-items: center
}
.cart_item .cart_img_wrap{
   flex: 2;
   display: flex;
   justify-content: center;
   align-items: center;
   width: 80%;
}
.cart_item .cart_info_wrap{
   flex: 4;
     display: flex;
   flex-direction: column;
   justify-content: space-around
   
}
.cart_info_wrap .goods_name{
       color:#ccc;
  /* 多行文本超出打点 ， 百度一下  */
       display: -webkit-box;
       overflow: hidden;
       -webkit-box-orient: vertical;
       -webkit-line-clamp:2 
}
.cart_info_wrap .goods_price_wrap{
    display: flex;
    justify-content: space-between
}
.goods_price_wrap .goods_price{
    font-size: 34rpx;
    color: var(--themeColor);
}
.goods_price_wrap .cart_num_tool{
    display: flex;
}
.cart_num_tool .num_edit{
  width: 55rpx;
   height: 55rpx;
    display: flex;
   justify-content: center;
   align-items: center;
   border:1rpx solid #ccc
}
.cart_num_tool .goods_num{
  width: 55rpx;
   height: 55rpx;
    display: flex;
   justify-content: center;
   align-items: center;
 }

 /* 底部工具栏 */
.footer_tool{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background: #fff;
  display: flex ;
  border-top: 1rpx solid #ccc
}
.footer_tool .all_chk_wrap{
   flex: 2;
   display: flex;
   justify-content: center;
   align-items: center;

}
.footer_tool .total_price_wrap{
   flex: 5;
   text-align: right;
   padding-right: 15rpx;
}
.footer_tool .order_pay_wrap{
   flex: 3;
   background: var(--themeColor);
   font-size: 32rpx;
   font-weight: 600;
   color: #fff;
   display: flex;
   justify-content: center;
   align-items: center;
}
.total_price_wrap .total_price .total_price_text{
     font-size: 34rpx;
     font-weight: 600;
    color: var(--themeColor);
}
 