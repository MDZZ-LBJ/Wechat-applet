page{
  background: #edece8
}

.user_info_wrap{
   height: 45vh;
   background: var(--themeColor) ;
   overflow: hidden;
   position: relative
}
.user_info_wrap .user_img_wrap{
   position: relative
}
.user_info_wrap .user_btn{
   position: absolute;
   left: 50%;
   top:40%;
   transform: translateX(-50%);
   border: 1rpx solid #fff;
   color: #fff;
   font-size: 38rpx;
   padding:20rpx 70rpx;
   border-radius: 10rpx
}
 
.user_img_wrap .user_bg{
  height: 50vh;
  /* 高斯模糊效果 */
  filter: blur(10rpx)
}
 
.user_img_wrap .user_info{
    position: absolute;
    left: 50%;
    top:20%;
    transform: translateX(-50%);
    text-align: center
} 
.user_info .user_icon{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%
}
.user_info .user_name{
   color: #fff;
   margin-top: 40rpx;
   font-size: 40rpx;
}


.user_content{
   position: relative
}
 /* 历史足迹 */
.user_content .user_main{
    position: absolute;
    width: 90%;
    left: 50%;
    transform: translateX(-50%);
    top:-40rpx;
    color: #666
}
.user_main .history_wrap{
   background: #fff;
   display: flex
}
.user_main .history_wrap navigator{
    flex:1;
    text-align: center;
    padding: 10rpx 0
}
.user_main .history_wrap navigator .his_num{
   color: var(--themeColor) ;
}
 
 /* 我的订单 */
 .user_content .order_wrap{
      background: #fff;
      margin-top: 30rpx;
}
.order_wrap .orders_title{
   padding: 20rpx;
   border-bottom:  1rpx solid #ccc
}
.order_wrap .order_content{
   display: flex
}
.order_wrap .order_content navigator{
     flex: 1;
     text-align: center;
     padding: 15rpx;
}
.order_wrap .order_content navigator .iconfont{
   color: var(--themeColor) ;
   font-size: 40rpx;
}

/* 收货地址管理 */
.address_wrap{
      background: #fff;
      margin-top: 30rpx;
       padding: 20rpx ;
}

/* 应用信息相关 */
.app_info_wrap{
    background: #fff;
      margin-top: 30rpx;
}
.app_info_wrap .app_info_item{
    padding: 20rpx ;
     border-bottom:  1rpx solid #ccc
}
.app_info_item .contact{
   display: flex;
   justify-content: space-between
}

/* 推荐 */
.recommend_wrap{
       background: #fff;
      margin : 30rpx 0;
       padding: 20rpx ;
}

 